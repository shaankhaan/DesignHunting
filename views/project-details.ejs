<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= projectData.title %> - Project Details</title>
</head>
<body>
  <h1><%= projectData.title %></h1>
  <p><%= projectData.description %></p>

  <div class="project-images">
    <% projectData.images.forEach(function(image) { %>
      <img src="<%= image %>" alt="<%= projectData.title %>" class="project-img">
    <% }) %>
  </div>

  <a href="/portfolio" class="back-button">Back to Portfolio</a>

  <style>
    .project-images {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }

    .project-img {
      width: 100%;
      height: auto;
      max-width: 400px;
      border: 1px solid #ccc;
    }

    .back-button {
      margin-top: 20px;
      padding: 10px;
      background-color: #4187FD;
      color: white;
      text-decoration: none;
      border-radius: 5px;
    }

    .back-button:hover {
      background-color: #3873D5;
    }
  </style>
</body>
</html>
