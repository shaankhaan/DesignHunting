<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <% if (projectData) { %>
      <%= projectData.title %> - Project Details
    <% } else { %>
      Project Not Found
    <% } %>
  </title>
  <style>
    .project-images {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }
    .project-img {
      width: 100%;
      height: auto;
      max-width: 400px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    .back-button {
      display: inline-block;
      margin-top: 20px;
      padding: 10px;
      background-color: #4187FD;
      color: white;
      text-decoration: none;
      border-radius: 5px;
    }
    .back-button:hover {
      background-color: #3873D5;
    }
  </style>
</head>
<body>
  <% if (projectData) { %>
    <h1><%= projectData.title %></h1>
    <p><%= projectData.description %></p>
    <% if (projectData.images && projectData.images.length) { %>
      <div class="project-images">
        <% projectData.images.forEach(function(image) { %>
          <img src="<%= image.trim() %>" alt="<%= projectData.title %>" class="project-img">
        <% }); %>
      </div>
    <% } else { %>
      <p>No images available for this project.</p>
    <% } %>
  <% } else { %>
    <h1>Project Not Found</h1>
    <p><%= errorMessage || "The project you are looking for does not exist." %></p>
  <% } %>
  <a href="/portfolio" class="back-button">Back to Portfolio</a>
</body>
</html>
